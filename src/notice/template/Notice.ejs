<!DOCTYPE html>
<html xml:lang="es">
<head>
    <title>Noticias</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/notice.css">
</head>
<body>
    <div class="container">
        <div class="notice-container">
            <h1>Noticias y Proyectos</h1>
            <div class="notice-grid">
                <% notices.forEach(notice => { %>
                    <div class="notice-card">
                        <img src="<%= notice.imagen %>" class="card-image" alt="<%= notice.titulo %>">
                        <div class="card-content">
                            <h3 class="card-title"><%= notice.titulo %></h3>
                            <p class="card-participant">
                                <strong>Participante:</strong> <%= notice.participante %>
                            </p>
                            <p class="card-date">
                                <strong>Fecha:</strong> <%= notice.fecha_proyecto %>
                            </p>
                            <p class="card-description"><%= notice.descripcion_corta %></p>
                            
                            <div id="desc-<%= notice.id %>" class="card-full-description">
                                <%= notice.descripcion_completa %>
                            </div>
                            
                            <button class="toggle-btn" data-target="desc-<%= notice.id %>">
                                Ver Más
                            </button>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButtons = document.querySelectorAll('.toggle-btn');
            
            toggleButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-target');
                    const descripcion = document.getElementById(targetId);
                    
                    if (descripcion.style.display === 'none' || !descripcion.style.display) {
                        descripcion.style.display = 'block';
                        this.textContent = 'Ver Menos';
                    } else {
                        descripcion.style.display = 'none';
                        this.textContent = 'Ver Más';
                    }
                });
            });
        });
    </script>
</body>
</html>