<div class="container mt-5">
    <div class="card mx-auto shadow-lg border-0" style="max-width: 500px;">
        <div class="card-body text-center p-4">
            <img src="<%= aboutData.foto %>" alt="Foto de perfil" class="rounded-circle mb-3 shadow-sm" width="150"
                height="150">
            <h3 class="card-title mb-2">
                <%= aboutData.nombre %>
            </h3>
            <p class="text-muted mb-1">ID: <%= aboutData.id %>
            </p>
            <p class="text-muted mb-3">Correo: <%= aboutData.correo %>
            </p>
            <hr>
            <p>
                <%= aboutData.descripcion %>
            </p>
        </div>
    </div>
</div>